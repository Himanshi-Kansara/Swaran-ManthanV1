<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6E4E4"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffff"
        android:elevation="15dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#fff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menubar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_black_24dp" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/menubar"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10px"
                android:src="@drawable/ic_search_black_24dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:paddingBottom="60dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingBottom="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/newbanner"
                android:layout_height="180dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/round_card"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:layout_height="wrap_content"
                        android:text="Top Categories"
                        android:textColor="#5F4591"
                        android:layout_weight="0.25"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MORE"
                        android:layout_weight="0.75"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="#E4679B"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your one stop solution to jewellery shopping"
                    android:textColor="#707070"
                    android:textSize="13dp"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ring" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Rings"
                            android:layout_marginTop="-5dp"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/earing" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Earings"
                            android:layout_marginTop="-5dp"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/pandents" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Pandents"
                            android:layout_marginTop="-5dp"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/round_card"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/store"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:layout_height="wrap_content"
                        android:text="Feature Products"
                        android:textColor="#5F4591"
                        android:layout_weight="0.25"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MORE"
                        android:layout_weight="0.75"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="#E4679B"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/apps2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's take a glimpse of our trending collections"
                    android:textColor="#707070"
                    android:textSize="13dp"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/like"
                            android:backgroundTint="#ffffff"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="55dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bangles" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Rs 15000"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/like"
                            android:backgroundTint="#ffffff"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="55dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bangles" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Rs 15000"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/like"
                            android:backgroundTint="#ffffff"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="55dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bangles" />
                        <TextView
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Rs 15000"
                            android:textColor="#ffff"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/round_card"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:layout_height="wrap_content"
                        android:text="Today's Rate"
                        android:textColor="#5F4591"
                        android:layout_weight="0.25"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="40dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:padding="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="GOLD"
                            android:textColor="#ffff"
                            android:textSize="18sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:elevation="10dp"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="916 HM"
                                    android:textColor="#ffff"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:elevation="10dp"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="Rs 50941.50"
                                    android:textColor="#ffff"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#ffff"
                                android:layout_margin="2dp"
                                android:orientation="vertical"></LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:elevation="10dp"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="22CT"
                                    android:textColor="#ffff"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:elevation="10dp"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="Rs 60941.50"
                                    android:textColor="#ffff"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="40dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_card"
                        android:elevation="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="SLIVER"
                            android:textColor="#ffff"
                            android:textSize="18sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:elevation="10dp"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="Rs 50941.50"
                                    android:textColor="#ffff"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

        </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="defaultPosition"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/colorPrimaryDark"
        android:background="#fff"
        android:elevation="15dp"
        android:textStyle="bold"
        app:itemIconTint="@color/colorPrimaryDark"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>